<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.example.androidboardgame"
		  android:versionCode="1"
		  android:versionName="1.0">
	<uses-sdk android:minSdkVersion="19"/>
	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

		<activity android:name="com.example.androidboardgame.MainActivity"
				  android:label="@string/app_name"
				  android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>


		<activity android:name="com.example.androidboardgame.SettingsActicity"
				  android:label="Settings"
				  android:screenOrientation="portrait">

		</activity>

		<activity android:name="com.example.androidboardgame.PlayGameActivity"
				  android:label="Play Game "
				  android:screenOrientation="landscape"
				>

		</activity>

		<activity android:name="com.example.androidboardgame.HelpActivity"
				  android:label="Game Rules Instructions"
				  android:screenOrientation="portrait">
		</activity>
		<activity android:name=".HighScoreActivity" android:label="High Scores" android:screenOrientation="portrait"/>
		<activity android:name=".StatisticsActivity" android:label="Game Statistics" android:screenOrientation="portrait"/>
		<activity android:name=".NumberOfGamesPlayedAndTiedActivity" android:label="Total Games" android:screenOrientation="portrait"/>
		<activity android:name=".TotalTiedGamesActicity" android:label="Total Games" android:screenOrientation="portrait"/>
		<service
				android:name=".model.BackgroundMusicService"
				>
		</service>



	</application>
	<uses-permission android:name="android.permission.VIBRATE"/>
</manifest>
